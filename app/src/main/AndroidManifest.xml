<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="deployits.com.ec.avispa_t">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:clearTaskOnLaunch="true"
            android:label="@string/title_activity_Inicio"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

                <!-- Para poder ser indexada por Google -->
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.sesion.SplashActivity"
            android:label="@string/title_activity_splash"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.menu.Categorias"
            android:label="@string/title_activity_categorias"
            android:screenOrientation="portrait" />
        <activity
            android:name=".preferencias.Preferencias"
            android:label="@string/title_activity_preferencias"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.menu.ListaDeCuponesGenerados"
            android:label="@string/title_activity_lista_de_cupones"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.sesion.RegistroActivity"
            android:label="@string/title_activity_registro"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.formulario.Formulario"
            android:label="@string/title_activity_formulario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.sesion.NotificacionesActivity"
            android:label="@string/title_notifications"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.sesion.RecuperaCuentaActivity"
            android:label="@string/title_activity_recuperar_cuenta"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.menu.ComerciosFavoritos"
            android:label="@string/title_activity_comercios_favoritos"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.sesion.LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.notificaciones.MsnRecuperaClaveActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.notificaciones.IniciadoSesionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.notificaciones.SinConexionActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

    </application>

</manifest>